---
import Layout from "../layouts/Layout.astro";
import LinkedIcon from "../components/Icons/LinkedIcon.astro";
import GitHubIcon from "../components/Icons/GitHubIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../components/Icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
import CodingIcon from "../components/Icons/CodingIcon.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
import PersonIcon from "../components/Icons/PersonIcon.astro";
import SectionContainerAbout from "../components/SectionContainerAbout.astro";
---

<Layout
  title="Lorena.dev | Front End Developer and Digital Designer | Portfolio"
>
  <main class="px-4 fade-in slide-in-bottom">
    <SectionContainer class="py-44 pb-24">
      <div
        class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
      >
        <div class="mr-auto place-self-center lg:col-span-7">
          <h1
            class="text-gray-900/80 text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
          >
            Hello world! I'm Lorena
          </h1>

          <h2
            class="text-black font-semibold text-xl lg:text-2xl text-wrap max-w-[700px]"
          >
            Web Developer & Digital Designer.
          </h2>
          <h3 class="text-black text-xl opacity-80 pt-5 text-wrap">
            Enthusiastic about Human-Computer Interaction, dedicated to creating
            user experiences that blend <span
              class="text-violet-500 font-semibold"
              >innovative web development with a touch of creativity.</span
            >
          </h3>

          <ul class="flex gap-4 mt-8 flex-wrap">
            <li>
              <SocialPill href="https://www.linkedin.com/in/lohurtado/">
                <LinkedIcon class="size-4 md:size-7" />
                LinkedIn
              </SocialPill>
            </li>
            <li>
              <SocialPill href="https://github.com/lorenahurol/">
                <GitHubIcon class="size-4 md:size-6" />
                GitHub
              </SocialPill>
            </li>
            <li>
              <SocialPill href="mailto:hilorena.contact@gmail.com">
                <MailIcon class="size-4 md:size-6" />
                hilorena.contact@gmail.com
              </SocialPill>
            </li>
          </ul>
        </div>

        <div
          class="rounded-full w-[250px] h-[250px] lg:w-[400px] lg:h-[400px] relative hidden lg:mt-0 lg:col-span-5 lg:flex"
        >
          <img
            src="/images/hero-image.webp"
            alt="hero image"
            class="absolute transform -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            width={300}
            height={300}
          />
        </div>
      </div>
    </SectionContainer>

    <div class="relative p-4">
      <SectionContainerAbout>
        <SectionContainer id="about">
          <h2
            class="text-2xl font-semibold mb-6 mt-2 flex gap-x-2 items-center"
          >
            <PersonIcon class="size-7" />
            About me
          </h2>
          <About />
        </SectionContainer>
      </SectionContainerAbout>
    </div>

    <SectionContainer id="projects">
      <h2
        class="text-2xl font-semibold mb-6 mt-[50px] flex gap-x-2 items-center"
      >
        <CodingIcon class="size-9" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
