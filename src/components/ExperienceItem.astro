---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-black-90">{date}</time>
<h3 class="text-lg font-semibold text-violet-500">
  {title}
</h3>
<p class="mb-4 lg:pr-8 text-base font-normal text-black-90 text-pretty">
  {description}
</p>
